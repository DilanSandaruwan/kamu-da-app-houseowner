<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.dilan.kamuda.houseownerapp.feature.order.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/mealFragment"
        android:name="com.dilan.kamuda.houseownerapp.feature.home.MealFragment"
        android:label="fragment_meal"
        tools:layout="@layout/fragment_meal" />
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.dilan.kamuda.houseownerapp.feature.menu.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_editMealMenuFragment"
            app:destination="@id/editMealMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dilan.kamuda.houseownerapp.feature.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/addNewFragment"
        android:name="com.dilan.kamuda.houseownerapp.feature.add.AddNewFragment"
        android:label="AddNewFragment" />
    <fragment
        android:id="@+id/editMealMenuFragment"
        android:name="com.dilan.kamuda.houseownerapp.feature.edit.EditMealMenuFragment"
        android:label="EditMealMenuFragment" >
        <argument
            android:name="foodMenuItem"
            app:argType="com.dilan.kamuda.houseownerapp.feature.menu.model.FoodMenu" />
        <action
            android:id="@+id/action_editMealMenuFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
</navigation>